{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "removeComments": true
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}